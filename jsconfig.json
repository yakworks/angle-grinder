{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dummy",
    "target": "es6",
    "module": "es6",
    "paths": {
      "angle-grinder/src/*": ["src/*"],
      "angle-grinder/svelte/*": ["svelte/*"],
      "@ag-svelte/*": ["svelte/*"],
      "@ag/*": ["src/*"],
      "~/*": ["examples/demo/src/*"],
    },
    "checkJs": true,
    "allowJs": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "svelte/**/*",
    "examples/demo/src/**/*",
  ]
}
